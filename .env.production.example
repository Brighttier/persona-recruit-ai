# Firebase Production Configuration
# Copy this to .env.production and fill in your actual values

# Firebase Client Configuration (Public - Safe to expose)
NEXT_PUBLIC_FIREBASE_API_KEY=your_firebase_api_key_here
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=persona-recruit-ai.firebaseapp.com
NEXT_PUBLIC_FIREBASE_PROJECT_ID=persona-recruit-ai
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=persona-recruit-ai.appspot.com
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=your_sender_id
NEXT_PUBLIC_FIREBASE_APP_ID=your_app_id
NEXT_PUBLIC_FIREBASE_MEASUREMENT_ID=your_measurement_id

# Firebase Admin Configuration (Server-side only)
FIREBASE_PROJECT_ID=persona-recruit-ai
FIREBASE_STORAGE_BUCKET=persona-recruit-ai.appspot.com
# For local development, use service account key file
GOOGLE_APPLICATION_CREDENTIALS=./service-account-key.json
# For production deployment (Cloud Run, Vercel, etc.), use built-in credentials

# Google Cloud Document AI Configuration
GCLOUD_PROJECT_ID=persona-recruit-ai
DOCAI_LOCATION=us
DOCAI_PROCESSOR_ID=your_document_ai_processor_id

# AI Services Configuration
GOOGLE_AI_API_KEY=your_google_ai_api_key_here
GOOGLE_CLOUD_PROJECT=persona-recruit-ai

# ElevenLabs Configuration for AI Interviews
ELEVENLABS_API_KEY=your_elevenlabs_api_key
ELEVENLABS_AGENT_ID=your_elevenlabs_agent_id
ELEVENLABS_VOICE_ID=your_preferred_voice_id

# Application Configuration
NODE_ENV=production
NEXTAUTH_SECRET=your_nextauth_secret_for_production
NEXTAUTH_URL=https://yourdomain.com

# Security Configuration
CORS_ORIGIN=https://yourdomain.com
RATE_LIMIT_MAX=1000

# Email Service (Optional)
RESEND_API_KEY=your_resend_api_key
FROM_EMAIL=noreply@yourdomain.com

# Analytics (Optional)
ANALYTICS_ID=your_analytics_id

# Production URLs
PRODUCTION_URL=https://yourdomain.com
CDN_URL=https://cdn.yourdomain.com