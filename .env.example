# This file contains example environment variables.
# Copy this file to .env.local and fill in the values for local development.

# Firebase Client Configuration
# Get these from your Firebase project settings (web app)
NEXT_PUBLIC_FIREBASE_API_KEY="your-firebase-api-key"
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN="your-project-id.firebaseapp.com"
NEXT_PUBLIC_FIREBASE_PROJECT_ID="your-project-id"
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET="your-project-id.appspot.com"
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID="your-sender-id"
NEXT_PUBLIC_FIREBASE_APP_ID="your-app-id"
NEXT_PUBLIC_FIREBASE_MEASUREMENT_ID="your-measurement-id"

# Firebase Admin Configuration (Server-side)
# Used for backend operations and scripts
GOOGLE_APPLICATION_CREDENTIALS_JSON="paste-your-service-account-json-string-here"

# Google Cloud Project ID
# This is required for fetching secrets from Google Secret Manager
GOOGLE_CLOUD_PROJECT="your-gcp-project-id"

# Gemini API Key (for Genkit AI flows)
# For production, set GEMINI_API_KEY_SECRET to the name of your secret in Google Secret Manager.
# For local development, you can set GOOGLE_API_KEY directly to bypass Secret Manager.
GEMINI_API_KEY_SECRET="gemini-api-key"
# GOOGLE_API_KEY="your-gemini-api-key"

# Document AI Configuration
DOCAI_PROCESSOR_ID="your-document-ai-processor-id"
DOCAI_LOCATION="us" # e.g., 'us' or 'eu'

# ElevenLabs Configuration (for AI interviews)
ELEVENLABS_API_KEY="your_elevenlabs_api_key"
ELEVENLABS_AGENT_ID="your_agent_id"
ELEVENLABS_VOICE_ID="your_voice_id"

# Email Configuration (using Resend)
RESEND_API_KEY="your_resend_api_key"
FROM_EMAIL="noreply@yourdomain.com"

# Firebase Authentication (no JWT needed)
# Authentication is handled by Firebase Auth - no JWT_SECRET required
