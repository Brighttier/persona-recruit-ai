
rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    
    // Helper function for authentication
    function isAuthenticated() {
      return request.auth != null;
    }

    // User profile files (avatars, resumes, videos)
    match /users/{userId}/{allPaths=**} {
      allow read, write: if isAuthenticated() && request.auth.uid == userId;
    }

    // Company assets (logos, documents)
    match /companies/{companyId}/{allPaths=**} {
      allow read: if true; // Public read for logos
      allow write: if isAuthenticated() && 
                    (request.auth.token.role == 'super_admin' || 
                     (request.auth.token.role == 'company_admin' && request.auth.token.companyId == companyId));
    }
    
    // Candidate-specific uploads, readable by company staff
    match /resumes/{userId}/{fileName} {
        allow read, write: if isAuthenticated() && request.auth.uid == userId;
        allow read: if isAuthenticated() && (request.auth.token.role == 'recruiter' || request.auth.token.role == 'company_admin');
    }
    
    match /video-intros/{userId}/{fileName} {
        allow read, write: if isAuthenticated() && request.auth.uid == userId;
        allow read: if isAuthenticated() && (request.auth.token.role == 'recruiter' || request.auth.token.role == 'company_admin');
    }
    
    // Job attachments (e.g., images for job postings)
    match /jobs/{jobId}/{allPaths=**} {
      allow read: if true;
      allow write: if isAuthenticated() && (request.auth.token.role == 'recruiter' || request.auth.token.role == 'company_admin');
    }

    // Default deny
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
